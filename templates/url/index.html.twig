{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}
	<div class="example-wrapper pt-3">
		<h3>Your short urls:</h3>

		{% if urls.isEmpty %}
			<p>No urls yet</p>
		{% endif %}

	    <ul class="list-group">
            {% for url in urls %}
            	<li class="list-group-item d-flex justify-content-between align-items-center">
				    <a href="{{ url.getName }}">{{ url.getShortName }}</a>

					{% if url.getIsShared %}
	                	<p>Url was shared</p>
	                {% else %}
	                	<span class="badge badge-pill">
							<form action="{{ path('urls_share', {'id': url.getId}) }}" method="POST">
								<button type="submit" class="btn btn-outline-success">share</button>
							</form>
						</span>
	                {% endif %}
				</li>
            {% endfor %}
	    </ul>
	</div>
{% endblock %}
