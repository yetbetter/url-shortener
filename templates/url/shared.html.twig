{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}
	<div class="example-wrapper pt-3">
        <h3>All shared urls:</h3>

        {% if urls|length == 0 %}
            <p>No urls yet</p>
        {% endif %}

	    <ul class="list-group">
            {% for url in urls %}
                <li class="list-group-item">
                    <a target="_blank" href="{{ url.getName }}">{{ url.getShortName }}</a>
                </li>
            {% endfor %}
	    </ul>
	</div>
{% endblock %}
